{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "types": [
      "jest",
      "node"
    ],
  },
  "filesGlob": [
    "typings/*.d.ts",
    "**/*.ts",
  ],
  "types": [
    "jest",
    "node"
  ],
  "exclude": [
    "build",
    "node_modules",
    "app/client/**"
  ],
  "compileOnSave": false
}